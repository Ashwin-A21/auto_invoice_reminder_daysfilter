<odoo>
    <template id="invoice_pending_tpl">
        <t t-call="web.html_container">
            <div style="margin:20px;">
                <h3>Pending Invoice Summary</h3>
                <t t-if="docs and docs[0]">
                    <p><strong>Customer:</strong> <t t-esc="docs[0].partner_id.name"/></p>
                </t>
                <p><strong>Report Date:</strong> <t t-esc="date" t-options="{'widget': 'date'}"/></p>
            </div>
            
            <table class="table table-sm" style="width: 90%; margin: 20px auto;">
                <thead>
                    <tr>
                        <th>Invoice #</th>
                        <th>Customer</th>
                        <th>Amount Total</th>
                        <th>Due Date</th>
                        <th>Payment Status</th>
                    </tr>
                </thead>
                <tbody>
                    <t t-foreach="docs" t-as="inv">
                        <tr>
                            <td><t t-esc="inv.name"/></td>
                            <td><t t-esc="inv.partner_id.name"/></td>
                            <td><t t-esc="inv.amount_total" t-options="{'widget': 'monetary', 'display_currency': inv.currency_id}"/></td>
                            <td><t t-esc="inv.invoice_date_due" t-options="{'widget': 'date'}"/></td>
                            <td><t t-esc="inv.payment_state"/></td>
                        </tr>
                    </t>
                </tbody>
            </table>
        </t>
    </template>

    <report
        id="action_pending_invoice_report_daysfilter_v3"  model="account.move"
        string="Pending Invoice Report"
        report_type="qweb-pdf"
        name="auto_invoice_reminder_daysfilter.invoice_pending_tpl"
        file="auto_invoice_reminder_daysfilter.invoice_pending_tpl"
    />
</odoo>